{
  "config": {
    "target": "http://localhost:3000",
    "phases": [
      {
        "duration": 60,
        "arrivalRate": 1
      }
    ],
    "defaults": {
      "headers": {
        "Content-Type": "application/json"
      }
    }
  },
  "scenarios": [
    {
      "name": "Basic smoke test",
      "flow": [
        { "get": { "url": "/" } },
        { "get": { "url": "/health" } },
        {
          "post": {
            "url": "/api/login",
            "json": {
              "username": "{{ username }}",
              "password": "{{ password }}"
            }
          }
        }
      ]
    }
  ]
}
